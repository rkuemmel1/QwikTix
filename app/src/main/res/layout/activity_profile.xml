    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
    android:background="@drawable/steel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.ryan.qwiktix.SearchActivity">


            <TextView
                android:id="@+id/pFirstName"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="18dp"
                android:layout_alignParentTop="true"
                 />

            <TextView
                android:id="@+id/pLastName"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pFirstName"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="35dp"
                />





        <ImageButton
            android:id="@+id/pLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/logoutbutton"
            android:text="Log Out"
            android:layout_alignTop="@+id/pEditProfile"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lEmail"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Email"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/pEditProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/lPayPalEmail"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="PayPal Email"
            android:layout_below="@+id/lEmail"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/pEmail"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_alignTop="@+id/lEmail" />

        <TextView
            android:id="@+id/pPayPalEmail"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"

            android:layout_alignTop="@+id/lPayPalEmail" />

        <ImageButton
            android:id="@+id/pEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:src="@drawable/editprofilebutton"
            android:layout_below="@+id/pLastName"
            android:layout_toLeftOf="@+id/pLogOut"
            android:layout_toStartOf="@+id/pLogOut" />

